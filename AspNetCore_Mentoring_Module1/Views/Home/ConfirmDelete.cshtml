
@{
    ViewData["Title"] = "ConfirmDelete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ConfirmDelete</h1>

@model AspNetCore_Mentoring_Module1.Models.OutputModels.ProductModel
@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>ProductName</dt>
        <dd>
            @Html.DisplayFor(model => model.ProductName)
