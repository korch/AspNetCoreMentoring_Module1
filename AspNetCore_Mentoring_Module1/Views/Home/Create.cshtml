@model AspNetCore_Mentoring_Module1.Products
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create a new product</h1>

<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">Name</label>
        <input type="text" asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SupplierId" class="control-label">SupplierId</label>
        <input type="number" asp-for="SupplierId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">CategoryId</label>
        <input type="number" asp-for="CategoryId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="QuantityPerUnit" class="control-label">QuantityPerUnit</label>
        <input type="number" asp-for="QuantityPerUnit" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UnitPrice" class="control-label">UnitPrice</label>
        <input type="number" asp-for="UnitPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UnitsInStock" class="control-label">UnitsInStock</label>
        <input type="number" asp-for="UnitsInStock" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UnitsOnOrder" class="control-label">UnitsOnOrder</label>
        <input type="number" asp-for="UnitsOnOrder" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReorderLevel" class="control-label">ReorderLevel</label>
        <input type="number" asp-for="ReorderLevel" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Discontinued" class="control-label">Discontinued</label>
        <input type="number" asp-for="Discontinued" class="form-control" />
    </div>  
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>