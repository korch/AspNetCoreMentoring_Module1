@model AspNetCore_Mentoring_Module1.Models.OutputModels.ProductModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create a new product</h1>

<form asp-antiforgery="true" asp-action="create" asp-controller="home">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="@Model.ProductName" class="control-label">Name</label>
        <input type="text" asp-for="@Model.ProductName" class="form-control" />
        <span asp-validation-for="@Model.ProductName"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Supplier.SupplierId" class="control-label">Supplier</label>
        <select class="form-control" asp-for="@Model.SupplierId" asp-items="@(new SelectList(@Model.Suppliers, "SupplierId", "CompanyName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Category.CategoryId" class="control-label">Category</label>
        <select class="form-control" asp-for="@Model.CategoryId" asp-items="@(new SelectList(@Model.Categories, "CategoryId", "CategoryName"))"></select>
    </div>
    <div class="form-group">
        <label asp-for="@Model.QuantityPerUnit" class="control-label">QuantityPerUnit</label>
        <input type="text" asp-for="@Model.QuantityPerUnit" class="form-control" />
        @Html.ValidationMessage("QuantityPerUnit")
    </div>
    <div class="form-group">
        <label asp-for="@Model.UnitPrice" class="control-label">UnitPrice</label>
        <input type="number" asp-for="@Model.UnitPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.UnitsInStock" class="control-label">UnitsInStock</label>
        <input type="number" asp-for="@Model.UnitsInStock" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.UnitsOnOrder" class="control-label">UnitsOnOrder</label>
        <input type="number" asp-for="@Model.UnitsOnOrder" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.ReorderLevel" class="control-label">ReorderLevel</label>
        <input type="number" asp-for="@Model.ReorderLevel" class="form-control" />
        <span asp-validation-for="@Model.ReorderLevel"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Discontinued" class="control-label">Discontinued</label>
        <input type="checkbox" asp-for="@Model.Discontinued" class="form-control" />
        <span asp-validation-for="@Model.Discontinued"></span>

    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>


@section scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"
            asp-fallback-src="~/lib/jquery-validation/dist/jquery.validate.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"
            asp-fallback-src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.validator && window.jQuery.validator.unobtrusive">
    </script>
}